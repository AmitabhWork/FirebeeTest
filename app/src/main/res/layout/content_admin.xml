<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ahh.com.app.Admin"
    tools:showIn="@layout/activity_admin">

    <Button
        android:text="Add Members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="167dp"
        android:id="@+id/addMember"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add Banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_banner"
        android:layout_below="@+id/addMember"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_news"
        android:layout_below="@+id/add_banner"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add Gallery Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_Gallery_image"
        android:layout_below="@+id/add_news"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
